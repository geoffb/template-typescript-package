{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6"],
    "module": "es6",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "strict": true,
    "removeComments": true,
    "outDir": "dist/es",
    "declaration": true,
    "declarationDir": "dist/types"
  },
  "include": [
    "lib/**/*.ts"
  ],
  "compileOnSave": true
}
